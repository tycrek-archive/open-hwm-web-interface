				td.top.right#cpu-load-val --
			tr
				td.basic.center Min
				td.basic.right#cpu-load-min --
			tr
				td.basic.center.b-pad Max
				td.basic.right.b-pad#cpu-load-max --
			tr
				td.top.left(rowspan='3') RAM
